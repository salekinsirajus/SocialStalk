<div class="row">
  
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
    
    <%= render 'search_people/form' %>
    
  </div>
  
  <div id="newsfeed" class="col-lg-9">
    <%= render 'posts/form' %>
    <br>
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
    <%= render 'shared/paginate', resources: @activities %>
  </div>
  
  
</div>